<article class="h-entry">
    <h2><a href="/pages/{{filename}}" title="permalink">{{title}}</a></h2>
    <h2 class="p-name"><a href="/pages/{{filename}}" title="permalink" class="u-url u-uid" rel=canonical>{{title}}</a></h2>
    <p class="subheader">author: {{author}} &emsp; date: {{date}}</p>
    <p class="subheader">author: <span class="p-author">{{author}}</span> &emsp; date: <time class="dt-published" datetime={{date}}>{{date}}</time></p>
    <div class="e-content">
        {{{body}}}
    </div>
</article>
